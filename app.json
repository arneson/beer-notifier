{
  "name": "systemet-notifier",
  "description": "A bot for posting new beer from systembolget in a slack channel",
  "repository": "https://github.com/mlonn/slack-bot",
  "logo": "https://raw.githubusercontent.com/mlonn/slack-bot/master/logo.png",
  "keywords": ["node", "slack", "beer"],
  "success_url": "/",
  "addons": [
    {
      "plan": "mongolab",
      "as": "MONGODB"
    }
  ],
  "env": {
    "clientId": {
      "description": "Client ID provided by Slack"
    },
    "clientSecret": {
      "description": "Client Secret provided by Slack"
    },
    "APP_URL": {
      "description": "<app-name>.herokuapp.com",
      "required": true
    }
  }
}
